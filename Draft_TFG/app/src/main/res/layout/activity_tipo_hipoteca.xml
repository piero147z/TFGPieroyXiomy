<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tipoHipoteca"
    android:padding="25dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/signUpImageView"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_tfg1"
            android:transitionName="logoImageTrans"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/bienvenidoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué tipo de Hipoteca Necesita?"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:transitionName="textTrans"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hipotecaFija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hipoteca Fija"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="50dp"
            android:transitionName="buttonSingInTrans"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hipotecaVariable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hipoteca Variable"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="50dp"
            android:transitionName="buttonSingInTrans"/>


    </LinearLayout>

</LinearLayout>